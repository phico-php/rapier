{
  "name": "phico/rapier",
  "description": "Lightweight, dependency free Blade syntax renderer, built for Phico",
  "type": "project",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Phico\\View\\Rapier\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "authors": [
    {
      "name": "indgy",
      "email": "me@indgy.uk"
    }
  ],
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "/home/dev/phico-php/phico"
    }
  ],
  "require": {
    "phico/filesystem": "dev-main",
    "phico/support": "dev-main",
    "phico/phico": "dev-main"
  },
  "require-dev": {
    "php": "^8.0",
    "phpstan/phpstan": "*",
    "pestphp/pest": "^2.34"
  }
}
